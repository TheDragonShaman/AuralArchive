# Development image for AuralArchive
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    FLASK_ENV=development

WORKDIR /app

# Install system dependencies, including FFmpeg
RUN apt-get update \
    && apt-get install --yes --no-install-recommends \
        build-essential \
        libffi-dev \
        libssl-dev \
        libxml2 \
        libxslt1-dev \
        libpng-dev \
        ffmpeg \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install -r requirements.txt

# Ensure log directory exists for both file logging and bind mounts
RUN mkdir -p /app/logs

EXPOSE 5000

# Create non-root user for development runtime
ARG APP_USER=auralarchive
ARG APP_UID=1000
ARG APP_GID=1000
RUN groupadd --gid ${APP_GID} ${APP_USER} \
    && useradd --uid ${APP_UID} --gid ${APP_GID} --create-home --shell /bin/bash ${APP_USER} \
    && chown -R ${APP_USER}:${APP_USER} /app

# Application source is mounted at runtime for live reload
USER ${APP_USER}
CMD ["python", "app.py"]

