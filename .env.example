# AuralArchive Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# For bare metal: use relative paths like './config', './database', etc.
# For Docker: use absolute paths like '/config', '/downloads', etc.

# Primary config directory (contains config.txt and database)
AURALARCHIVE_CONFIG_DIR=./config

# Download directories
DOWNLOADS_DIR=./downloads
IMPORT_DIR=./import

# Conversion output directory
CONVERSION_DIR=./conversion

# Cache directory
CACHE_DIR=./static/cache

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
SECRET_KEY=dev-secret-key-change-in-production
LOG_LEVEL=INFO

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Override if needed (default: {AURALARCHIVE_CONFIG_DIR}/auralarchive_database.db)
# DATABASE_URL=sqlite:///./config/auralarchive_database.db
